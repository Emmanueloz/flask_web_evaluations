<script type="module" src="{{url_for('static',filename='/js/components/QuestionEditor.js')}}"></script>
<script type="module" src="{{url_for('static',filename='/js/generateEvaluation.js')}}"></script>
<script type="module" src="{{url_for('static',filename='/js/customElements.js')}}"></script>
<script type="module" src="{{url_for('static',filename='/js/elements.js')}}"></script>
<script type="module" src="{{url_for('static',filename='/js/main.js')}}"></script>
{% endblock scripts %}