{% extends "base.jinja" %}
{% from "_navbar.jinja" import navbar %}

{% block title %}
Evaluaci√≥n docente
{% endblock title %}

{% block styles %}
<link rel="stylesheet" href="{{url_for('static',filename='/css/Global.css')}}">
<link rel="stylesheet" href="{{url_for('static',filename='/css/evaluation.css')}}" />
{% endblock styles %}

{% block header %}
{{ super() }}
{{ navbar(current_user,"") }}
{% endblock header %}

{% block content %}
<main>
  <article id="questionArticle">

    <section id="dataEvaluation">
      <input type="hidden" id="id" name="id" value="">
      <input type="text" id="title" value="Titulo" placeholder="Titulo">
      <label for="id_teacher">
        <span class="label_teacher">Seleccione un docente</span>
        <select name="id_teacher" id="id_teacher">
          {% if teachers %}
          {% for teacher in teachers %}
          <option value="{{teacher.id}}">{{teacher.name}}</option>
          {% endfor %}
          {% endif %}
        </select>
      </label>
    </section>
    <section id="ListQuestion">
      <question-editor></question-editor>
    </section>
  </article>
  <article id="container-btn">
    <button class="btn" id="btnSave" type="button">Guardar</button>
    <button class="btn" id="btnAddQuestion" type="button">Agregar</button>
  </article>
</main>
{% endblock content %}

{% block scripts %}
<script type="module" src="{{url_for('static',filename='/js/context/contextListQuestion.js')}}"></script>
<script type="module" src="{{url_for('static',filename='/js/components/InputItem.js')}}"></script>
