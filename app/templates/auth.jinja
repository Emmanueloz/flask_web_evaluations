{% extends "base.jinja" %}
{% from "macros/_navbar.jinja" import navbar %}


{% block header %}
{{ super() }}
{{ navbar(current_user,"login") }}
{% endblock header %}

{% block content %}
<h1>{{title}}</h1>
<form action="" method="post">
    {{form.csrf_token}}
    <fieldset>
        <legend>{{form.username.label}}</legend>
        {{form.username}}
    </fieldset>
    <fieldset>
        <legend>{{form.passwd.label}}</legend>
        {{form.passwd}}
    </fieldset>
    <button type="submit">Enviar</button>
</form>
{% endblock %}